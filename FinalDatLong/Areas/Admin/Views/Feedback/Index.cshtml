@model IEnumerable<FinalDatLong.Models.Feedback>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Doctor's Feedback</title>
    <style>
        body {
            font-family: 'Times New Roman', Times, serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            align-items: flex-start;
            justify-content: center;
            min-height: 100vh;
        }

        .feedback-container {
            width: 80vw;
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            text-align: center;
            box-sizing: border-box;
        }

        #allFeedback {
            margin-top: 20px;
            text-align: left;
        }

            #allFeedback ul {
                list-style-type: none;
                padding: 0;
            }

            #allFeedback li {
                margin-bottom: 20px;
                padding: 20px;
                background-color: #f0f0f0;
                border-radius: 8px;
                font-size: 18px;
                position: relative;
                transition: background-color 0.3s ease;
            }

                #allFeedback li:hover {
                    background-color: #e0e0e0;
                }

                #allFeedback li strong {
                    color: #007BFF;
                }

        .rating {
            font-size: 24px;
            margin-top: 10px;
            color: #ffc107;
        }

        .feedback-button {
            position: absolute;
            bottom: 10px;
            right: 10px;
            background-color: #28a745;
            color: #fff;
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 18px;
            transition: background-color 0.3s ease;
        }

            .feedback-button:hover {
                background-color: #218838;
            }

        #feedbackModal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            justify-content: center;
            align-items: center;
        }

        #modalContent {
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            text-align: center;
            width: 70%; /* Chiều rộng khoảng 70% của màn hình */
            position: relative;
        }

        #modalInput {
            width: 100%;
            padding: 10px;
            box-sizing: border-box;
            font-size: 18px;
            margin-bottom: 20px;
        }

        #modalButton, #cancelButton {
            background-color: #007BFF;
            color: #fff;
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 18px;
            margin-right: 10px;
        }

        #cancelButton {
            background-color: #dc3545;
        }

        .doctor-reply {
            font-style: italic;
            margin-top: 10px;
            color: #6c757d;
        }
    </style>
</head>
<body>
    <div class="feedback-container">
        <h2>Patient reviews of the service</h2>

        <div id="allFeedback">
            <h3>All Reviews</h3>
            @foreach (var item in Model)
            {

                <strong>@(item.Patient != null ? item.Patient.FullName : "Patient")</strong>


                <div class="rating">
                    Evaluate:
                    @for (var i = 0; i < item.Rating; i++)
                    {
                        <i class="bi bi-star-fill"></i>
                    }
                </div>
                <div>@item.Feedback1</div>

                <hr>
            }
        </div>
    </div>

</body>
</html>
