@model FinalDatLong.Models.Doctor

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tài Khoản
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserName)
        </dd>

        <dt>
            Mật khẩu
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Password)
        </dd>

        <dt>
            FullName
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FullName)
        </dd>

        <dt>
            Email
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            Số điện thoại
        </dt>
        <dt>
            Avatar
        </dt>

        <dd>
            <img style="height:200px;width:200px" src="@Model.Avatar" alt=" @Model.FullName">
        </dd>

        <dt>
            Giới Thiệu
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Introduction)
        </dd>
        <dt>
            Chuyên Môn
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Specialization)
        </dd>

    </dl>

    @using (Html.BeginForm("Delete", "Doctor", FormMethod.Post, new {id = Model.IDDoctor})) {
